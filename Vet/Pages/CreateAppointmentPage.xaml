<Page x:Class="Vet.Pages.CreateAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateAppointmentPage">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Создать запись" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Label Content="Выберите животное"/>
            <ComboBox Name="AnimalComboBox" Margin="0,10,0,10"/>
            <DatePicker Name="DatePicker" Margin="0,10,0,10"/>
            <Label Content="Выберите время"/>
            <ComboBox Name="TimeComboBox" Margin="0,10,0,10">
                <!-- Заполняется программно -->
            </ComboBox>
            <Button Content="Создать запись" Width="150" Margin="0,20,0,20" Click="CreateAppointmentButton_Click"/>
            <Button Content="Назад" Width="100" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
