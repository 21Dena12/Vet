<Page x:Class="Vet.Pages.AddWorkerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddWorkerPage">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Добавить сотрудника" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox Name="FullNameTextBox"  Margin="0,10,0,10"/>
            <ComboBox Name="RoleComboBox" Margin="0,10,0,10" Height="30">
                <ComboBoxItem Content="Администратор" />
                <ComboBoxItem Content="Ветеринар" />
            </ComboBox>
            <PasswordBox Name="PasswordBox"  Margin="0,10,0,10"/>
            <Button Content="Сохранить" Width="150" Margin="0,20,0,10" Click="SaveButton_Click"/>
            <Button Content="Назад" Width="100" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
