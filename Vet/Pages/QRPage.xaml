<Page x:Class="Vet.Pages.QRPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QRPage">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Ваш QR-код" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Border BorderBrush="Black" BorderThickness="1" Width="250" Height="250" Margin="0,0,0,20">
                <Image Name="QRCodeImage" Stretch="Uniform"/>
            </Border>

            <Button Content="Сохранить QR-код" Width="200" Height="40" Click="SaveQRCodeButton_Click" Margin="0,10"/>
            <Button Content="Назад" Width="200" Height="40" Click="BackButton_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Page>
