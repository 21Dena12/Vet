<Page x:Class="Vet.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportsPage">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <TextBlock Text="Отчеты по количеству записей пользователей" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>
            <Button Content="Сформировать отчет" Width="200" Height="40" Click="GenerateReportButton_Click"/>
            <Border BorderThickness="1" BorderBrush="Black" Margin="0,20,0,0">
                <ItemsControl Name="ChartArea" />
            </Border>
            <Button Content="Назад" Width="100" Height="30" Margin="0,20,0,0" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
