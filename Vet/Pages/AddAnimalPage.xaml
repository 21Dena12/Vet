<Page x:Class="Vet.Pages.AddAnimalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAnimalPage">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="396">
            <TextBlock Text="Добавить животное" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Label Content="Кличка"/>
            <TextBox Name="NameTextBox" Margin="0,10,0,10"/>
            <Label Content="Вид"/>
            <TextBox Name="SpeciesTextBox" Margin="0,10,0,10"/>
            <Label Content="Порода"/>
            <TextBox Name="BreedTextBox" Margin="0,10,0,10"/>
            <Label Content="Возраст"/>
            <TextBox Name="AgeTextBox" Margin="0,10,0,10"/>
            <Button Content="Сохранить" Width="150" Margin="0,20,0,20" Click="SaveAnimalButton_Click"/>
            <Button Content="Назад" Width="100" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
